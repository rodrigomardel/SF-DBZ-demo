{% extends 'base.html.twig' %}

{% block title %}Planeta{% endblock %}

{% block body %}
    <h1>Planeta</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ planetum.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ planetum.name }}</td>
            </tr>
            <tr>
                <th>IsDestroyed</th>
                <td>{{ planetum.isDestroyed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ planetum.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ planetum.image }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ planetum.deletedAt ? planetum.deletedAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_planeta_local_index') }}">back to list</a>

    <a href="{{ path('app_planeta_local_edit', {'id': planetum.id}) }}">edit</a>

