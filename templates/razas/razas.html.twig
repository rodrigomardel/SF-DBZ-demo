{% extends 'base.html.twig' %}

{% block body %}
    <h1>¿Cuál es tu raza favorita?</h1>
    <div class="pj-ctn boxed">
        {% for raza in razas %}
            <a class="link-raza" href="{{ path('app_personajes_razas', {'raza': raza}) }}">
                <article class="raza-ctn">
                    <div class="raza-ctn">
                        <div class="pj-title">
                            <h2>{{ raza }}</h2>
                        </div>
                    </div>
                </article>
            </a>
        {% endfor %}
    </div>
{% endblock %}


